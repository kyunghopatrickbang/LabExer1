<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kyungho.labexer1.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:text="Quiz 1"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/tQuiz1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/tME"
        android:layout_alignLeft="@+id/tLE"
        android:layout_alignRight="@+id/tME"
        android:layout_alignStart="@+id/tLE"
        android:gravity="center"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:text="Quiz 2"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/tQuiz2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/tQuiz1"
        android:layout_alignLeft="@+id/tQuiz1"
        android:layout_alignRight="@+id/tQuiz1"
        android:layout_alignStart="@+id/tQuiz1"
        android:gravity="center"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="110dp"
        android:text="Seatworks"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:id="@+id/textView6" />

    <EditText
        android:id="@+id/tSW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/tQuiz2"
        android:layout_alignLeft="@+id/tQuiz2"
        android:layout_alignRight="@+id/tQuiz2"
        android:layout_alignStart="@+id/tQuiz2"
        android:gravity="center"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Exercises"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:id="@+id/textView3"
        android:layout_below="@+id/tSW"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:id="@+id/tLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/tME"
        android:layout_alignLeft="@+id/tME"
        android:layout_alignRight="@+id/tME"
        android:layout_alignStart="@+id/tME"
        android:gravity="center"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Exam"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:layout_alignBaseline="@+id/tME"
        android:layout_alignBottom="@+id/tME"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/tME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:onClick="callSecondActivity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />

</RelativeLayout>
